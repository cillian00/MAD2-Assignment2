<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark application theme. -->
    <style name="Theme.DonationX.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4CAF50</item> <!-- Green -->
        <item name="colorPrimaryVariant">#000000</item> <!-- Black -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your dark theme here. -->
    </style>

    <style name="Theme.DonationX.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DonationX.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DonationX.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Dark Firebase Resources-->
    <!-- Activity with no Title -->
    <style name="ThemeOverlay.MyNoTitleActivity.Dark" parent="Theme.DonationX.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Dark EditTexts -->
    <style name="ThemeOverlay.MyLightEditText.Dark" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="ThemeOverlay.MyTextDetail.Dark" parent="Theme.DonationX.Dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.FirebaseIcon.Dark" parent="Theme.DonationX.Dark">
        <item name="android:layout_marginTop">@dimen/icon_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/icon_bottom_margin</item>
    </style>

    <style name="ThemeOverlay.MyTitleText.Dark" parent="Theme.DonationX.Dark">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>
    <!-- End Dark Firebase Resources-->

    <style name="toggleStyle.Dark">
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>
</resources>
